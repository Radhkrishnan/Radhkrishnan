import shap
import pandas as pd

# Assuming the required variables and classifiers are already defined and the previous code block has been executed

# Verify if the best_classifier is 'lasso' and has the required data
if 'lasso' in shap_dataset_classifier_data.get(dataset, {}) and 'shap_values_df' in shap_dataset_classifier_data[dataset]['lasso']:
    # Get the SHAP values dataframe for the Lasso model
    shap_values_df = shap_dataset_classifier_data[dataset]['lasso']['shap_values_df']

    # Calculate the mean absolute SHAP value for each feature
    mean_abs_shap_values = shap_values_df.abs().mean().sort_values(ascending=False)

    # Get the top 50 features
    top_50_features = mean_abs_shap_values.head(50)

    # Print the top 50 features
    print(top_50_features)

    # Visualize the top 50 features using SHAP summary plot
    top_50_feature_names = top_50_features.index.tolist()
    top_50_shap_values = shap_values_df[top_50_feature_names]

    shap.summary_plot(top_50_shap_values.values, X_test[top_50_feature_names], plot_type="bar")

    # If you want to get the top 50 SHAP values in a dataframe
    top_50_shap_values_df = shap_values_df[top_50_feature_names]
    print(top_50_shap_values_df)
else:
    print(f"Error: 'lasso' model SHAP values are not available for dataset {dataset}.")
    if 'lasso' not in shap_dataset_classifier_data.get(dataset, {}):
        print(f"'lasso' key is missing in shap_dataset_classifier_data[{dataset}].")
    elif 'shap_values_df' not in shap_dataset_classifier_data[dataset]['lasso']:
        print(f"'shap_values_df' key is missing in shap_dataset_classifier_data[{dataset}]['lasso'].")

# Verify if the best_classifier is 'lasso' and has the required data
